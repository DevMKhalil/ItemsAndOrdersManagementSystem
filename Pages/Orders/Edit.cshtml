@page
@model ItemsAndOrdersManagementSystem.Pages.Orders.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Order</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Order.id" />
            <div class="form-group">
                <label asp-for="Order.UserId" class="control-label"></label>
                <select asp-for="Order.UserId" class="form-control" asp-items="ViewBag.UserId"></select>
                <span asp-validation-for="Order.UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Items</label>
                @for (int i = 0; i < Model.Order.Items.Count(); i++)
                {
                    <div>
                        <label>Product Name</label>
                        <input asp-for="Order.Items[i].Item.Name" class="form-control" />
@*                         <label>Quantity</label>
                        <input asp-for="Order.Items[i].Quantity" class="form-control" /> *@
                        <label>Price</label>
                        <input asp-for="Order.Items[i].Item.Price" class="form-control" />
                    </div>
                }
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
