@model ItemsAndOrdersManagementSystem.Pages.Orders.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Order</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.Timestamp)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.Timestamp)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.UserId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.UserId)
        </dd>
    </dl>
    <h3>Items</h3>
    <ul>
        @for (var index = 0; index < Model.Order.OrderItemsDtoList.Count; index++)
        {
            <select asp-for="Order.OrderItemsDtoList[index]" class="form-control form-select" disabled asp-items="Model.ItemList">
                <option disabled value="">--Items--</option>
            </select>
        }
    </ul>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Order.id">Edit</a> |
